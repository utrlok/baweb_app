{% extends '@AdminLTE/FOSUserBundle/Registration/register.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        img {
            vertical-align: initial;
        }
    </style>
{% endblock %}

{% block title %}Rejestracja{% endblock %}
{% block logo_login %}Szko≈Ça <b>Programowania</b>{% endblock %}

{% block login_form %}
    {% form_theme form '@AdminLTE/layout/form-theme-security.html.twig' %}
    {{ form_start(form, {'method': 'post', 'action': path('app_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_row(form.name, {'attr': {'icon': 'user'}}) }}
    {{ form_row(form.surname, {'attr': {'icon': 'user'}}) }}
    {{ form_row(form.email, {'attr': {'icon': 'envelope'}}) }}
    {{ form_row(form.plainPassword, {'attr': {'icon': 'lock'}}) }}
    {{ form_row(form.captcha, {'attr': {'icon': 'robot'}}) }}
    <div class="form-group">
        <button type="submit"
                class="btn btn-primary btn-block btn-flat">{{ 'Register'|trans({}, 'AdminLTEBundle') }}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block login_actions %}
    <br>
    <a href="{{ path('security_login'|route_alias) }}">
        {{ 'Back to login'|trans({}, 'AdminLTEBundle') }}
    </a>
{% endblock %}
