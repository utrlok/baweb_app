{% extends 'base.html.twig' %}

{% block page_title %}{{ answer.question.text }} - Edytowanie odpowiedzi{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block logo_path %}{% endblock %}

{% block page_content %}
    <form action="{{ path('answer_edit', {answer: answer.idAnswer}) }}" class="form-horizontal"
          method="post">
        <div class="box">
            <div class="box-body">
                <div class="col-md-12">
                    {{ form_widget(form) }}
                </div>
                <a href="{{ path('answers_list', {question: answer.question.idQuestion}) }}" title="Wróć"
                   class="btn btn-default"><i class="fas fa-reply"></i>
                    Wróć</a>
                <button type="submit" class="btn btn-primary pull-right"><i class="fas fa-save"></i> Zapisz</button>
            </div>
        </div>
    </form>
{% endblock %}

