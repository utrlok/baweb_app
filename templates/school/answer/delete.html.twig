{% extends 'base.html.twig' %}

{% block page_title %}{{ answer.question.text }} - Usuwanie odpowiedzi{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block logo_path %}{% endblock %}

{% block page_content %}
    <form action="{{ path('answer_delete', {answer: answer.idAnswer}) }}" class="form-horizontal"
          method="post">
        <div class="box">
            <div class="box-body">
                <div class="col-md-12">
                    <h4>Czy na pewno chcesz usunąć poniższą odpowiedź?</h4>
                    <p>{{ answer.text }}</p>
                    <input type="hidden" name="confirm" value="1">
                </div>
                <a href="{{ path('answers_list', {question: answer.question.idQuestion}) }}" title="Anuluj" class="btn btn-default"><i
                            class="fas fa-reply"></i> Anuluj</a>
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Usuń</button>
            </div>
        </div>
    </form>
{% endblock %}

