{% extends 'base.html.twig' %}

{% block page_title %}{{ lessonElement.lesson.title }} - Usuwanie elementu lekcji{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block logo_path %}{% endblock %}

{% block page_content %}
    <form action="{{ path('lesson_element_delete', {lessonElement: lessonElement.idLessonElement}) }}" class="form-horizontal"
          method="post">
        <div class="box">
            <div class="box-body">
                <div class="col-md-12">
                    <h4>Czy na pewno chcesz usunąć ten element lekcji?</h4>
                    <input type="hidden" name="confirm" value="1">
                </div>
                <a href="{{ path('lesson_elements_list', {lesson: lessonElement.lesson.idLesson}) }}" title="Anuluj" class="btn btn-default"><i
                            class="fas fa-reply"></i> Anuluj</a>
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Usuń</button>
            </div>
        </div>
    </form>
{% endblock %}

