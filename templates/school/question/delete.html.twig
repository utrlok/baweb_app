{% extends 'base.html.twig' %}

{% block page_title %}{{ question.course.title }} - Usuwanie pytania{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block logo_path %}{% endblock %}

{% block page_content %}
    <form action="{{ path('question_delete', {question: question.idQuestion}) }}" class="form-horizontal"
          method="post">
        <div class="box">
            <div class="box-body">
                <div class="col-md-12">
                    <h4>Czy na pewno chcesz usunąć poniższe pytanie?</h4>
                    <p>{{ question.text }}</p>
                    <input type="hidden" name="confirm" value="1">
                </div>
                <a href="{{ path('questions_list', {course: question.course.idCourse}) }}" title="Anuluj" class="btn btn-default"><i
                            class="fas fa-reply"></i> Anuluj</a>
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Usuń</button>
            </div>
        </div>
    </form>
{% endblock %}

