{% extends 'base.html.twig' %}

{% block page_title %}{{ lesson.course.title }} - Usuwanie lekcji - {{ lesson.title }}{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block logo_path %}{% endblock %}

{% block page_content %}
    <form action="{{ path('lesson_delete', {lesson: lesson.idLesson}) }}" class="form-horizontal"
          method="post">
        <div class="box">
            <div class="box-body">
                <div class="col-md-12">
                    <h4>Czy na pewno chcesz usunąć tę lekcję?</h4>
                    <input type="hidden" name="confirm" value="1">
                </div>
                <a href="{{ path('lessons_list', {course: lesson.course.idCourse}) }}" title="Anuluj" class="btn btn-default"><i
                            class="fas fa-reply"></i> Anuluj</a>
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Usuń</button>
            </div>
        </div>
    </form>
{% endblock %}

