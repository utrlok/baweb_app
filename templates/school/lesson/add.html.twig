{% extends 'base.html.twig' %}

{% block page_title %}{{ course.title }} - Dodawanie lekcji{% endblock %}
{% block page_subtitle %}{% endblock %}
{% block logo_path %}{% endblock %}

{% block page_content %}
    <form action="{{ path('lesson_add', {course:course.idCourse}) }}" class="form-horizontal"
          method="post">
        <div class="box">
            <div class="box-body">
                <div class="col-md-12">
                    {{ form_widget(form) }}
                </div>
                <a href="{{ path('lessons_list', {course:course.idCourse}) }}" title="Wróć" class="btn btn-default"><i class="fas fa-reply"></i> Wróć</a>
                <button type="submit" class="btn btn-primary pull-right"><i class="fas fa-save"></i> Zapisz</button>
            </div>
        </div>
    </form>
{% endblock %}

